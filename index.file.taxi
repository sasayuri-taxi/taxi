            if (!ctx) return;

            chartInstance = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['重大な事故', '軽微な事故', 'ヒヤリハット'],
                    datasets: [{
                        label: '発生件数（比率）',
                        data: [1, 29, 300],
                        backgroundColor: [
                            'rgba(220, 38, 38, 0.6)',
                            'rgba(245, 158, 11, 0.6)',
                            'rgba(5, 150, 105, 0.6)'
                        ],
                        borderColor: [
                            'rgba(220, 38, 38, 1)',
                            'rgba(245, 158, 11, 1)',
                            'rgba(5, 150, 105, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    scales: {
                        x: {
                            beginAtZero: true,
                            type: 'logarithmic',
                            title: {
                                display: true,
                                text: '発生件数（対数スケール）'
                            }
                        }
